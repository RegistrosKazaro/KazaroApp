APP_BASE_URL=https://api.example.com
PORT=4000

# Base de datos (establecer a una ruta persistente en AWS EBS/EFS)
DB_PATH=/var/lib/kazaro/Kazaro.db

# JWT para autenticación
JWT_SECRET=super-secret-value

# CORS: lista separada por comas de orígenes permitidos (sin barra final)
CORS_ALLOWED_ORIGINS=https://app.example.com,https://admin.example.com

# Respetar cabeceras X-Forwarded-* detrás de un load balancer (use 1 para ALB)
TRUST_PROXY=1

# SMTP (opcional; define MAIL_DISABLE=1 para desactivar)
MAIL_DISABLE=0
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=mailer@example.com
SMTP_PASS=password
MAIL_FROM="Kazaro <mailer@example.com>"
MAIL_TO=
MAIL_CC=
MAIL_BCC=
MAIL_BLOCKLIST=
MAIL_ALLOW_USER_FROM=0